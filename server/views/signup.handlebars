<div class="container">
  <div class="d-flex justify-content-center">
    {{#if message}}
    <p class="message-{{message.class}}">{{message.text}}</p>
    {{/if}}
  </div>
  <div class="d-flex justify-content-center h-75">
    <div class="card">
      <div class="card-header">
        <h3>Registrar</h3>
        <div class="d-flex justify-content-end social_icon">
          <span><i class="fab fa-facebook-square"></i></span>
          <span><i class="fab fa-google-plus-square"></i></span>
          <span><i class="fab fa-twitter-square"></i></span>
        </div>
      </div>
      <div class="card-body">
        <form action="/register" method="post">

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <input type="text" class="form-control" name="username" id="username" placeholder="Usuario" required>
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" class="form-control" name="password" id="password" placeholder="ContraseÃ±a" required>
          </div>

          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
              placeholder="Confirmar contraseÃ±a" required>
          </div>

          <div class="form-group">
            <input type="submit" value="Registrar" class="btn float-right login_btn">
          </div>
        </form>
        <a href="/login"><button class="btn float-left btn-secondary">Volver</button></a>
      </div>
    </div>
  </div>
</div>